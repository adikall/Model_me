{
  "manifest_version": 3,
  "name": "Gemini Chat Extension",
  "version": "1.0",
  "description": "Chat with Gemini AI using images and text",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gemini Chat",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ]
}